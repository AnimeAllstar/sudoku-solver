<MainPage>:
    name: 'mainPage'
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        Image:
            id: sudoku
        Button:
            text: 'Use This Photo'
            size_hint_x: 0.1
            on_release: 
                root.predict_numbers()
                


<AdjustmentPage>:
    name: 'adjustmentPage'
        BoxLayout:
            orientation: 'vertical'
            padding: 10

            GridLayout:
                cols: 9
                rows: 9
                on_parent:
                    root.addInputBoxes()
            Button:
                text: 'Confirm'
                size_hint_x: 0.1
                on_release: 
                    root.get_adjustment()

<SolutionPage>:
    name: 'solutionPage'
        BoxLayout:
            orientation: 'vertical'
            padding: 10

            Image:
                id: solution
            Button:
                text: 'Return to Home'
                size_hint_x: 0.1
                on_release: 
                    root.manager.current = 'mainPage'
                    root.manager.transition.direction = 'right'